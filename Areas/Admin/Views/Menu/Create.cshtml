@model PetShop.Models.Menu

@{
    ViewData["Title"] = "Tạo Menu";
}
<div class="app-content-header"> 
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm">
                <h3 class="main-color">PetShop <span class=" text-muted"> - Tạo Menu</span></h3>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row g-3">
        <div class="col-12">
            <div class="callout callout-main-color">
                Tạo một Menu mới bằng cách điền thông tin tương ứng vào đây.
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-8 col-12 mx-auto">
                <div class="card  card-outline mt-4 p-2">
                    <div class="card-header">
                        <div class="card-title">Biểu mẫu tạo Menu</div>
                    </div>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body mt-2">
                            <div class="row mb-4">
                                 <label asp-for="Title" class="col-md-3 col-form-label"></label>
                                <div class="col-md-9">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Url" class="col-md-3 col-form-label"></label>
                                <div class="col-md-9">
                                    <input asp-for="Url" class="form-control" />
                                    <span asp-validation-for="Url" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-7 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Parent_ID" class=" col-12 col-form-label"></label>
                                        <div class=" col-12">
                                            <select asp-for="Parent_ID" class="form-select" asp-items="ViewBag.Men_ID"></select>
                                            <span asp-validation-for="Parent_ID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="DisplayOrder" class=" col-12 col-form-label"></label>
                                        <div class=" col-12">
                                            <input asp-for="DisplayOrder" class="form-control" />
                                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center py-3">
                            <input type="submit" value="Tạo mới" class="btn btn-main-color me-5" />
                            <a asp-action="Index" class="btn btn-secondary ">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
