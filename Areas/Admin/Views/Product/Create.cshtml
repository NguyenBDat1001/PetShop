@model PetShop.Models.Product

@{
    ViewData["Title"] = "Tạo sản phẩm ";
}
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm">
                <h3 class="main-color">PetShop <span class=" text-muted"> - Tạo sản phẩm</span></h3>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row g-3">
        <div class="col-12">
            <div class="callout callout-main-color">
                Tạo sản phẩm mới bằng cách điền thông tin tương ứng tại đây.
            </div>
        </div>
        <div class="row">
            <div class=" col-12  mx-auto">
                <div class="card card-outline mt-4 p-2">
                    <div class="card-header">
                        <div class="card-title">Biểu mẫu tạo sản phẩm</div>
                    </div>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body mt-2">

                            <div class="row mb-4">
                                <div class="col-md-6 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Name" class="col-lg-12 col-xl-3 col-form-label"></label>
                                        <div class="col-lg-12 col-xl-9">
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label asp-for="Intro" class="col-lg-12 col-xl-3 col-form-label"></label>
                                        <div class="col-lg-12 col-xl-9">
                                            <input asp-for="Intro" class="form-control" />
                                            <span asp-validation-for="Intro" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Cat_ID" class=" col-12 col-form-label"></label>
                                        <div class=" col-12">
                                            <select asp-for="Cat_ID" class="form-select" asp-items="ViewBag.Cat_ID"></select>
                                            <span asp-validation-for="Cat_ID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Typ_ID" class=" col-12 col-form-label"></label>
                                        <div class=" col-12">
                                            <select asp-for="Typ_ID" class="form-select" asp-items="ViewBag.Typ_ID"></select>
                                            <span asp-validation-for="Typ_ID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Price" class="col-12 col-form-label"></label>
                                        <div class="col-12">
                                            <input asp-for="Price" class="form-control" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <label asp-for="Brand" class=" col-12 col-form-label"></label>
                                        <div class=" col-12">
                                            <input asp-for="Brand" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Unit" class=" col-xxl-3 col-form-label"></label>
                                        <div class=" col-xxl-7">
                                            <input asp-for="Unit" class="form-control" />
                                            <span asp-validation-for="Unit" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Quantity" class=" col-xxl-3 col-form-label"></label>
                                        <div class=" col-xxl-7">
                                            <input asp-for="Quantity" class="form-control" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Rate" class="col-xxl-3 col-form-label"></label>
                                        <div class=" col-xxl-4 d-flex align-items-center gap-2">
                                            <select asp-for="Rate" class="form-select">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                            </select> 
                                                <i class="fa-solid fa-star"></i>
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <label asp-for="Discount" class=" col-xxl-4 col-form-label"></label>
                                        <div class=" col-xxl-6">
                                            <input asp-for="Discount" class="form-control" />
                                            <span asp-validation-for="Discount" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-5 mb-md-0 mb-4">
                                    <div class="row">
                                        <label asp-for="Avatar" class="col-lg-12 col-xl-4 col-form-label"></label>
                                        <div class="col-lg-12 col-xl-8">
                                            <input asp-for="Avatar" class="form-control" type="file" accept="image/*" />
                                            <div class="w-1oo mt-2">
                                                <img id="imgPreview" class="img-fluid img-prod my-1  rounded" alt="">
                                            </div>
                                            <span asp-validation-for="Avatar" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7 ">
                                    <div class="row">
                                        <label asp-for="Description" class="col-lg-12 col-xl-2 col-form-label"></label>
                                        <div class="col-lg-12 col-xl-10">
                                            <textarea asp-for="Description" class="form-control"> </textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label asp-for="Details" class="col-md-2 col-form-label"></label>
                                <div class="col-md-10">
                                    <textarea asp-for="Details" class="form-control"> </textarea>
                                    <span asp-validation-for="Details" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center py-3">
                            <input type="submit" value="Tạo mới" class="btn btn-main-color me-5" />
                            <a asp-action="Index" class="btn btn-secondary ">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Header {
    <link rel="stylesheet" href="~/admin/plugins/ckeditor5/ckeditor5.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "/admin/plugins/ckeditor5/ckeditor5.js",
                "ckeditor5/": "/admin/plugins/ckeditor5/"
            }
        }
    </script>
    <script type="module">
        import {
            ClassicEditor,
            Essentials,
            Paragraph,
            Bold,
            Italic,
            Font,
            Code,
            Link
        } from 'ckeditor5';

        ClassicEditor
            .create(document.querySelector('#Details'), {
                plugins: [Essentials, Paragraph, Bold, Italic, Font, Code, Link],
                toolbar: [
                    'undo', 'redo', '|', 'bold', 'italic', '|', "code", "Link" ,'|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor'
                ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });

        ClassicEditor
            .create(document.querySelector('#Description'), {
                plugins: [Essentials, Paragraph, Bold, Italic, Font, Code, Link],
                toolbar: [
                    'undo', 'redo', '|', 'bold', 'italic', '|', "code", "Link", '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor'
                ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });
    </script>


    <script>
        window.onload = () => {
            document.getElementById("Avatar").onchange = (e) => {
                var preview = document.getElementById('imgPreview');
                var file = e.target.files[0];
                var reader = new FileReader();

                reader.onloadend = function () {
                    preview.src = reader.result;
                }

                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    preview.src = '';
                }
            };
        }
    </script>
}